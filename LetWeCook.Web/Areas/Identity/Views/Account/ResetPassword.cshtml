@model LetWeCook.Web.Areas.Identity.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="min-h-screen flex items-center justify-center bg-gray-900 text-gray-100">
    <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-center mb-6">Reset Your Password</h2>

        <p class="text-gray-400 text-sm text-center mb-6">
            Enter your new password below to reset your account.
        </p>

        <form method="post" asp-action="ResetPassword">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div asp-validation-summary="All" class="mb-4 text-red-500 text-sm"></div>


            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-400 text-sm mb-2">New Password</label>
                <input asp-for="Password" type="password"
                    class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-gray-400 text-sm mb-2">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password"
                    class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit"
                class="w-full bg-blue-600 hover:bg-blue-500 transition-all text-white font-semibold py-2 rounded-lg">
                Reset Password
            </button>
        </form>

        <div class="mt-6 text-center">
            <a asp-action="Login" class="text-gray-400 text-sm hover:text-gray-200 transition-all">
                Back to Login
            </a>
        </div>
    </div>
</div>
