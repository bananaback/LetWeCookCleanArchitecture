@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="min-h-screen flex items-center justify-center bg-gray-900 text-gray-100">
    <div class="w-full max-w-md bg-gray-800 rounded-2xl shadow-lg p-8 text-center">
        <h2 class="text-2xl font-semibold mb-4">Password Reset Successful</h2>
        <p class="text-gray-400 text-sm mb-6">
            Your password has been reset. You can now log in with your new password.
        </p>

        <div class="mt-6">
            <a asp-action="Login"
                class="px-4 py-2 bg-blue-600 hover:bg-blue-500 transition-all text-white font-semibold rounded-lg">
                Back to Login
            </a>
        </div>
    </div>
</div>
