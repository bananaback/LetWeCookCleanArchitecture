<div class="p-8 max-w-7xl mx-auto">
    <!-- Controls: Search + Sort + Items Per Page + Pagination -->
    <div class="mb-6 flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">

        <!-- Left Side: Search + Sort + Items per Page -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-4 w-full lg:w-auto">

            <!-- Search -->
            <div class="relative w-full sm:w-64">
                <input id="searchInput" type="text" placeholder="Search collections..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-400" />

                <!-- Make glass clickable -->
                <button id="searchBtn" class="absolute right-3 top-1/2 transform -translate-y-1/2">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" stroke-width="2"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round"
                            d="M21 21l-4.35-4.35m0 0A7.5 7.5 0 1010.5 18.5a7.5 7.5 0 006.15-3.85z" />
                    </svg>
                </button>
            </div>


            <!-- Sort -->
            <select id="sortSelect"
                class="px-4 py-2 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-orange-400">
                <option value="name">Sort by Name</option>
                <option value="createdAt">Sort by Date Created</option>
            </select>

            <button id="sortToggle" class="text-orange-500 hover:text-orange-700 transition transform"
                title="Toggle Sort Order">
                <svg id="sortArrow" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 rotate-0" fill="none"
                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
                </svg>
            </button>


            <!-- Items Per Page -->
            <select id="pageSizeSelect"
                class="px-4 py-2 border border-gray-300 rounded-xl text-gray-700 focus:outline-none focus:ring-2 focus:ring-orange-400">
                <option value="2" selected>2 per page</option>
                <option value="3">3 per page</option>
                <option value="6">6 per page</option>
                <option value="9">9 per page</option>
                <option value="12">12 per page</option>
                <option value="24">24 per page</option>
            </select>
        </div>

        <!-- Right Side: Pagination -->
        <div id="pagination" class="flex items-center justify-end gap-2">

            <!-- First (disabled) -->
            <button class="px-3 py-1.5 text-sm bg-white border border-gray-300 rounded-xl opacity-50 cursor-not-allowed"
                disabled>
                &laquo; First
            </button>

            <!-- Prev (disabled) -->
            <button class="px-3 py-1.5 text-sm bg-white border border-gray-300 rounded-xl opacity-50 cursor-not-allowed"
                disabled>
                &lsaquo; Prev
            </button>

            <!-- Current Page Only -->
            <button class="px-3 py-1.5 text-sm bg-orange-500 text-white rounded-xl cursor-default" disabled>
                3
            </button>

            <!-- Next (disabled) -->
            <button class="px-3 py-1.5 text-sm bg-white border border-gray-300 rounded-xl opacity-50 cursor-not-allowed"
                disabled>
                Next &rsaquo;
            </button>

            <!-- Last (disabled) -->
            <button class="px-3 py-1.5 text-sm bg-white border border-gray-300 rounded-xl opacity-50 cursor-not-allowed"
                disabled>
                Last &raquo;
            </button>

        </div>

    </div>


    <div id="collectionContainer" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">



    </div>
</div>

<!-- Edit Collection Name Modal -->
<div id="editModal" class="fixed inset-0 z-50 hidden bg-black bg-opacity-40">
    <div class="modal-content bg-white w-full max-w-md rounded-2xl p-6 shadow-lg relative mx-auto my-auto">
        <!-- Close Button -->
        <button id="closeEditModal" class="absolute top-3 right-3 text-gray-400 hover:text-black">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>

        <h2 class="text-xl font-semibold mb-4 text-gray-800">Rename Collection</h2>

        <form id="editCollectionForm" class="space-y-4">
            <input type="hidden" id="editCollectionId" />
            <div>
                <label for="editCollectionName" class="block text-sm font-medium text-gray-700 mb-1">New Name</label>
                <input id="editCollectionName" type="text" required
                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-400" />
            </div>
            <div class="flex justify-end gap-2">
                <button type="button" id="cancelEditBtn"
                    class="px-4 py-2 text-sm text-gray-600 hover:text-black rounded-xl">Cancel</button>
                <button type="submit"
                    class="px-4 py-2 text-sm bg-orange-500 text-white rounded-xl hover:bg-orange-600 transition">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/user-collection.js"></script>
}