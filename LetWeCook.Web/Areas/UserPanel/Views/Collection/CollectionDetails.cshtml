<div class="hidden" id="collection-id" data-collection-id="@ViewData["CollectionId"]"></div>

<div class="mt-10 px-6">

    <!-- Collection Name -->
    <h1 id="collection-title" class="text-4xl font-bold text-orange-700 mb-6">üç≥ My Cooking Collection</h1>

    <!-- Search + Sort -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">

        <!-- Search Bar -->
        <form class="flex w-full md:w-1/2">
            <input id="search-input" type="text" placeholder="Search recipes..."
                class="flex-1 px-4 py-2 border border-orange-300 rounded-l-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-400" />
            <button type="submit" id="search-button"
                class="px-4 py-2 bg-orange-500 text-white rounded-r-md hover:bg-orange-600 transition">
                üîç Search
            </button>
        </form>

        <!-- Items Per Page Selector -->
        <div class="flex items-center gap-2 text-orange-700">
            <label for="items-per-page" class="text-sm font-medium">Items per page:</label>
            <select id="items-per-page"
                class="px-3 py-2 border border-orange-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-400">
                <option value="5">5</option>
                <option value="10" selected>10</option>
                <option value="20">20</option>
                <option value="50">50</option>
            </select>
        </div>


        <!-- Sort Dropdown -->
        <div class="flex items-center gap-2">
            <label for="sort" class="text-sm font-medium text-orange-700">Sort by:</label>
            <select id="sort"
                class="px-3 py-2 border border-orange-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-400">
                <option value="name">Name</option>
                <option value="date">Date Added</option>
            </select>

        </div>
        <!-- Sort Direction Toggle -->
        <button id="sort-direction-button"
            class="flex items-center gap-1 text-orange-700 hover:text-orange-900 transition">
            <span class="text-sm">Direction</span>
            <span id="sort-direction-icon" class="transition-transform duration-300 rotate-0">‚ñ≤</span>
        </button>
    </div>

    <!-- Recipe Cards Container -->
    <div id="recipe-cards-container" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6"></div>

    <!-- Pagination -->
    <!-- Place this container where you want pagination -->
    <div id="pagination" class="mt-10 flex justify-center items-center gap-3 text-sm"></div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/collection-details.js"></script>
}