<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetWeCook.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LetWeCook.Web.styles.css" asp-append-version="true" />
</head>

<body class="bg-gradient-to-br from-amber-50 via-orange-100 to-red-50 min-h-screen">
    <div class="flex">
        <!-- Sidebar -->
        <aside class="w-64 h-screen fixed bg-white shadow-lg border-r border-gray-200">
            <div class="p-6">
                <!-- Logo/Branding -->
                <div class="flex items-center gap-2 mb-8">
                    <a href="/" class="flex items-center gap-2">
                        <img src="~/images/letwecook_logo.jpg" alt="Logo" class="w-20 h-20 object-contain">
                        <span class="ml-4 text-xl font-bold text-orange-600">LetWeCook</span>
                    </a>
                </div>

                <!-- Navigation -->
                <nav class="space-y-2">
                    <a href="/UserPanel/Profile"
                        class="flex items-center gap-3 p-3 rounded-lg hover:bg-orange-50 text-gray-700 hover:text-orange-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
                        </svg>
                        Profile
                    </a>
                    <a href="/UserPanel/Ingredient"
                        class="flex items-center gap-3 p-3 rounded-lg hover:bg-orange-50 text-gray-700 hover:text-orange-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                        </svg>
                        Ingredients
                    </a>
                    <a href="/UserPanel/Recipe"
                        class="flex items-center gap-3 p-3 rounded-lg hover:bg-orange-50 text-gray-700 hover:text-orange-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M4 3a1 1 0 000 2h12a1 1 0 100-2H4zM3 7a1 1 0 011-1h12a1 1 0 011 1v9a2 2 0 01-2 2H5a2 2 0 01-2-2V7zm5 2a1 1 0 000 2h4a1 1 0 100-2H8z" />
                        </svg>
                        Recipes
                    </a>

                    <a href="/UserPanel/Profile/Requests"
                        class="flex items-center gap-3 p-3 rounded-lg hover:bg-orange-50 text-gray-700 hover:text-orange-600 transition-colors">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path
                                d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
                        </svg>
                        Requests
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 p-8">
            <div class="max-w-7xl mx-auto">
                <!-- Header -->
                <header class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome to Your Kitchen</h1>
                    <p class="text-gray-600">Manage your culinary world with ease</p>
                </header>

                <!-- Content Area -->
                <div class="bg-white rounded-xl shadow-md p-6 border-t-4 border-orange-500">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <!-- Scripts (unchanged) -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>