@{
    ViewData["Title"] = "Recipes";
}

<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Recipes</h1>
        <a href="/UserPanel/Recipe/Create"
            class="bg-orange-600 text-white px-4 py-2 rounded-xl hover:bg-orange-700 transition">
            + Add New Recipe
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Mock Recipe Card -->
        @for (int i = 1; i <= 6; i++)
        {
            <div class="bg-white rounded-2xl shadow p-4 hover:shadow-md transition relative">
                <h2 class="text-xl font-semibold text-orange-600 mb-2">Mock Recipe @i</h2>
                <p class="text-gray-600 text-sm mb-4">
                    This is a short description for mock recipe number @i.
                </p>
                <div class="flex gap-3 text-sm">
                    <a href="/UserPanel/Recipe/Details/@i" class="text-orange-700 hover:underline">View</a>
                    <a href="/UserPanel/Recipe/Edit/@i" class="text-blue-600 hover:underline">Edit</a>
                    <form action="/UserPanel/Recipe/Delete/@i" method="post"
                        onsubmit="return confirm('Delete this recipe?')" class="inline">
                        <button type="submit" class="text-red-600 hover:underline bg-transparent border-none p-0">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>

    <!-- Mock Pagination -->
    <div class="flex justify-center mt-10">
        <nav class="inline-flex items-center gap-1 rounded-xl bg-white shadow px-4 py-2">
            <a href="?page=1" class="px-3 py-1 rounded hover:bg-orange-100 text-gray-600">Previous</a>
            <a href="?page=1" class="px-3 py-1 rounded bg-orange-500 text-white">1</a>
            <a href="?page=2" class="px-3 py-1 rounded hover:bg-orange-100 text-gray-700">2</a>
            <a href="?page=3" class="px-3 py-1 rounded hover:bg-orange-100 text-gray-700">3</a>
            <a href="?page=2" class="px-3 py-1 rounded hover:bg-orange-100 text-gray-600">Next</a>
        </nav>
    </div>
</div>
