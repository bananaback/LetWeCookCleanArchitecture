<div class="grid grid-cols-4 gap-6">
    <div class="col-span-2 bg-green-50 p-6 rounded-xl shadow-lg w-full max-w-2xl">
        <div class="grid grid-cols-2 gap-4">
            <!-- Left Column -->
            <div>
                <!-- Profile Picture -->
                <div class="flex items-center space-x-4">
                    <img src="~/images/default-profile.jpg" alt="Profile" class="w-20 h-20 rounded-full profile-picture"
                        id="photoPreview">
                    <div>
                        <a href="#" id="btnUploadPhoto" class="text-green-600 font-semibold change-photo">
                            Change Photo
                        </a>
                        <p class="text-xs text-gray-600">
                            Max file size: 10 MB. <br> Allowed formats: JPG, JPEG, PNG.
                        </p>
                    </div>
                </div>


                <!-- Personal Information -->
                <div class="mt-4">
                    <h2 class="text-gray-700 font-semibold">Personal Information</h2>

                    <label class="block text-sm mt-2">First Name</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 first-name">

                    <label class="block text-sm mt-2">Last Name</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 last-name">

                    <label class="block text-sm mt-2">Bio</label>
                    <textarea class="w-full p-2 border rounded mt-1 bio" rows="2"></textarea>

                    <label class="block text-sm mt-2">Date of Birth</label>
                    <input type="date" class="w-full p-2 border rounded mt-1 birth-date">

                    <label class="block text-sm mt-2">Gender</label>
                    <div class="flex gap-2 mt-1">
                        <label class="gender-btn male bg-green-500 text-white px-4 py-2 rounded cursor-pointer">
                            <input type="radio" name="gender" value="male" class="hidden"> Male
                        </label>
                        <label class="gender-btn female bg-gray-200 text-gray-600 px-4 py-2 rounded cursor-pointer">
                            <input type="radio" name="gender" value="female" class="hidden" checked> Female
                        </label>
                    </div>

                </div>
            </div>

            <!-- Right Column -->
            <div>
                <!-- Contact & Social Media -->
                <div class="mt-4">
                    <h2 class="text-gray-700 font-semibold">Contact & Social Media</h2>

                    <label class="block text-sm mt-2">Email</label>
                    <input type="email" class="w-full p-2 border rounded mt-1 email" disabled>

                    <label class="block text-sm mt-2">Phone Number</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 phone-number">

                    <label class="block text-sm mt-2">Instagram</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 instagram">

                    <label class="block text-sm mt-2">Facebook</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 facebook">
                </div>

                <!-- Address -->
                <div class="mt-4">
                    <h2 class="text-gray-700 font-semibold">Address</h2>

                    <label class="block text-sm mt-2">House Number</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 house-number">

                    <label class="block text-sm mt-2">Street</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 street">

                    <label class="block text-sm mt-2">Ward</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 ward">

                    <label class="block text-sm mt-2">District</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 district">

                    <label class="block text-sm mt-2">City / Municipality</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 city">

                    <label class="block text-sm mt-2">Province</label>
                    <input type="text" class="w-full p-2 border rounded mt-1 province">
                </div>


            </div>
        </div>

        <!-- Save Button -->
        <button class="w-full bg-green-600 text-white p-2 rounded mt-4 save-btn">Save</button>
    </div>

