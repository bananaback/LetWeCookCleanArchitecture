<div class="min-h-screen bg-cream-50 py-8">
    <div class="max-w-4xl mx-auto px-4">
        <h1 class="text-3xl font-bold text-teal-900 mb-6 text-center">Add New Recipe Ingredient</h1>

        <form id="ingredient-form" class="bg-white shadow-lg rounded-lg p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-teal-700 font-medium mb-1" for="name">Name *</label>
                    <input type="text" id="name" name="name" required
                        class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                </div>
                <div>
                    <label class="block text-teal-700 font-medium mb-1" for="category_id">Category *</label>
                    <select id="category_id" name="category_id" required
                        class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500">
                        <option value="">Select Category</option>
                        <!-- Populate with your categories -->
                    </select>
                </div>
            </div>

            <div>
                <label class="block text-teal-700 font-medium mb-1" for="description">Description *</label>
                <textarea id="description" name="description" required rows="3"
                    class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"></textarea>
            </div>

            <div class="bg-cream-100 p-4 rounded-md border border-teal-100">
                <h2 class="text-xl text-teal-800 font-semibold mb-4">Nutritional Values</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                    <div><label class="block text-teal-700 mb-1" for="calories">Calories</label><input type="number"
                            id="calories" name="calories" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500"></div>
                    <div><label class="block text-teal-700 mb-1" for="protein">Protein (g)</label><input type="number"
                            id="protein" name="protein" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500"></div>
                    <div><label class="block text-teal-700 mb-1" for="carbohydrates">Carbohydrates (g)</label><input
                            type="number" id="carbohydrates" name="carbohydrates" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500"></div>
                    <div><label class="block text-teal-700 mb-1" for="fat">Fat (g)</label><input type="number" id="fats"
                            name="fats" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500">
                    </div>
                    <div><label class="block text-teal-700 mb-1" for="sugar">Sugar (g)</label><input type="number"
                            id="sugars" name="sugars" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500">
                    </div>
                    <div><label class="block text-teal-700 mb-1" for="fiber">Fiber (g)</label><input type="number"
                            id="fiber" name="fiber" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500">
                    </div>
                    <div><label class="block text-teal-700 mb-1" for="sodium">Sodium (mg)</label><input type="number"
                            id="sodium" name="sodium" step="0.1"
                            class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500">
                    </div>
                </div>
                <button type="button" id="auto-fill-nutrition"
                    class="mt-4 bg-teal-600 text-white px-4 py-2 rounded-md hover:bg-teal-700 transition-colors">
                    Add Nutrition Values with AI ü§ñ
                </button>
            </div>

            <div class="bg-cream-100 p-4 rounded-md border border-teal-100">
                <h2 class="text-xl text-teal-800 font-semibold mb-4">Dietary Information</h2>
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
                    <div class="flex items-center">
                        <input type="checkbox" id="is_vegetarian" name="is_vegetarian"
                            class="h-4 w-4 text-teal-600 border-teal-300 focus:ring-teal-500">
                        <label for="is_vegetarian" class="ml-2 text-teal-700">Vegetarian üåø</label>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="is_vegan" name="is_vegan"
                            class="h-4 w-4 text-teal-600 border-teal-300 focus:ring-teal-500">
                        <label for="is_vegan" class="ml-2 text-teal-700">Vegan ü•ë</label>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="is_gluten_free" name="is_gluten_free"
                            class="h-4 w-4 text-teal-600 border-teal-300 focus:ring-teal-500">
                        <label for="is_gluten_free" class="ml-2 text-teal-700">Gluten Free üåæ</label>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="is_pescatarian" name="is_pescatarian"
                            class="h-4 w-4 text-teal-600 border-teal-300 focus:ring-teal-500">
                        <label for="is_pescatarian" class="ml-2 text-teal-700">Pescatarian üêü</label>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-teal-700 font-medium mb-1">Cover Image *</label>
                    <button type="button" id="upload-cover"
                        class="w-full p-2 bg-cream-200 border border-teal-300 rounded-md hover:bg-cream-300 transition-colors">
                        Upload Cover Image
                    </button>
                    <input type="hidden" id="cover_image_url_id" name="cover_image_url_id" required>
                    <div id="cover-preview" class="mt-2 relative inline-block"></div>
                </div>
                <div>
                    <label class="block text-teal-700 font-medium mb-1" for="expiration_days">Expiration Days</label>
                    <input type="number" id="expiration_days" name="expiration_days" step="1"
                        class="w-full p-2 border border-teal-200 rounded-md focus:ring-2 focus:ring-teal-500">
                </div>
            </div>

            <div class="bg-cream-100 p-4 rounded-md border border-teal-100">
                <h2 class="text-xl text-teal-800 font-semibold mb-4">Additional Details</h2>
                <div id="details-container" class="space-y-4 relative"></div>
                <button type="button" id="add-detail"
                    class="mt-2 bg-teal-600 text-white px-4 py-2 rounded-md hover:bg-teal-700 transition-colors">
                    Add New Detail
                </button>
            </div>

            <div class="text-center">
                <button id="save-btn" type="button"
                    class="bg-teal-700 text-white px-6 py-3 rounded-md hover:bg-teal-800 transition-colors">
                    Save Ingredient
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://widget.cloudinary.com/v2.0/global/all.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="~/js/ingredient-editor.js"></script>
    <script defer src="~/js/drag.js"></script>
}